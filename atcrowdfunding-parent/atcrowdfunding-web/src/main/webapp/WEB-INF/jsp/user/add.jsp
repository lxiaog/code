            -->
        </div>
    </div>
</div>
<script src="${APP_PATH}/view/jquery/jquery-2.1.1.min.js"></script>
<script src="${APP_PATH}/view/bootstrap/js/bootstrap.min.js"></script>
<script src="${APP_PATH}/view/script/docs.min.js"></script>
<script src="${APP_PATH}/view/layer/layer.js"></script>
<script src="${APP_PATH}/view/script/function.js"></script>
<script src="${APP_PATH}/view/script/url.js"></script>
<script type="text/javascript">


    $(function () {
        $(".list-group-item").click(function () {
            if ($(this).find("ul")) {
                $(this).toggleClass("tree-closed");
                if ($(this).hasClass("tree-closed")) {
                    $("ul", this).hide("fast");
                } else {
                    $("ul", this).show("fast");
                }
            }
        });


        $("#user-add-btn").click(function () {
            const username = $("#username").val();
            if (usernameReg(username)) return;

            const name = $("#name").val();
            if (nameReg(name)) return;

            const email = $("#email").val();
            if (email !== '' && emailReg(email)) return;
            const app_path = '${APP_PATH}';
            const json = {
                'username': username,
                'name': name,
                'email': email,
            };
            jsonPost(app_path, url_user_add, json, function (result) {
                window.location.href = app_path+url_web_user_index;
            });

        });

    });
</script>
</body>
</html>
